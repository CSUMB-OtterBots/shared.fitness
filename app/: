module ApplicationHelper
  def nav_link(link_text, link_path)
    #class_name = current_page?(link_path) ? 'nav-link text-uppercase text-expanded' : ''
    class_name = 'nav-link text-uppercase text-expanded'
      link_to link_text, :class=> class_name do 
        current_page?(link_path) ? content_tag(:span, "(current)", :class=>'sr_only') : nil,
        link_path
      end
  end
end

