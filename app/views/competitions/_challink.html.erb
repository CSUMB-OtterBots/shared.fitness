<li class="list-group-item d-flex justify-content-between align-items-center list-group-item-secondary drop-row<%=challenge.id%>">
  <div class="col-md-3"><%= link_to challenge.name, new_event_path(challenge_id: challenge.id), remote: true %></div>
  <span class="col-md-3 badge"><%= challenge.value %> Point<%= challenge.value == 1 ? "" : "s" %></span>
  <span class="col-md-3 badge">Per <%= challenge.per %></span>
  <span class="col-md-3 badge badge-success badge-pill"><%= total %></span>
</li>
